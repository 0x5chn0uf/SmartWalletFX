{
  "designSystem": {
    "name": "Cobalt Financial Dashboard",
    "version": "1.0",
    "category": "fintech_dashboard",
    "theme": "dark_professional"
  },
  "colorPalette": {
    "primary": {
      "background": "#1a1f2e",
      "surface": "#242937",
      "surfaceElevated": "#2d3548"
    },
    "accent": {
      "primary": "#4fd1c7",
      "secondary": "#6366f1",
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#9ca3af",
      "muted": "#6b7280",
      "inverse": "#1f2937"
    },
    "chart": {
      "primary": "#4fd1c7",
      "secondary": "#3b82f6",
      "gradient": "linear-gradient(135deg, #4fd1c7 0%, #3b82f6 100%)"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "mono": "'SF Mono', Monaco, 'Cascadia Code', monospace"
    },
    "scale": {
      "display": {
        "fontSize": "48px",
        "fontWeight": "700",
        "lineHeight": "1.1",
        "letterSpacing": "-0.02em"
      },
      "h1": {
        "fontSize": "36px",
        "fontWeight": "600",
        "lineHeight": "1.2"
      },
      "h2": {
        "fontSize": "24px",
        "fontWeight": "600",
        "lineHeight": "1.3"
      },
      "body": {
        "fontSize": "16px",
        "fontWeight": "400",
        "lineHeight": "1.5"
      },
      "caption": {
        "fontSize": "14px",
        "fontWeight": "400",
        "lineHeight": "1.4"
      },
      "small": {
        "fontSize": "12px",
        "fontWeight": "400",
        "lineHeight": "1.3"
      }
    }
  },
  "spacing": {
    "scale": "8px",
    "values": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px"
    }
  },
  "layout": {
    "structure": {
      "sidebar": {
        "width": "240px",
        "position": "fixed",
        "background": "primary.surface"
      },
      "main": {
        "marginLeft": "240px",
        "padding": "24px",
        "background": "primary.background"
      },
      "grid": {
        "columns": 12,
        "gap": "24px",
        "breakpoints": {
          "sm": "640px",
          "md": "768px",
          "lg": "1024px",
          "xl": "1280px"
        }
      }
    }
  },
  "components": {
    "card": {
      "background": "primary.surface",
      "borderRadius": "12px",
      "padding": "24px",
      "border": "1px solid rgba(255, 255, 255, 0.1)",
      "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.15)",
      "variants": {
        "metric": {
          "padding": "20px",
          "minHeight": "120px"
        },
        "chart": {
          "padding": "24px",
          "minHeight": "300px"
        }
      }
    },
    "button": {
      "borderRadius": "8px",
      "padding": "12px 24px",
      "fontWeight": "500",
      "transition": "all 0.2s ease",
      "variants": {
        "primary": {
          "background": "accent.primary",
          "color": "text.inverse",
          "hover": {
            "background": "darken(accent.primary, 10%)"
          }
        },
        "secondary": {
          "background": "transparent",
          "color": "text.secondary",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "hover": {
            "background": "rgba(255, 255, 255, 0.05)"
          }
        }
      }
    },
    "navigation": {
      "item": {
        "padding": "12px 16px",
        "borderRadius": "8px",
        "color": "text.secondary",
        "fontSize": "14px",
        "fontWeight": "500",
        "hover": {
          "background": "rgba(255, 255, 255, 0.05)",
          "color": "text.primary"
        },
        "active": {
          "background": "accent.primary",
          "color": "text.inverse"
        }
      }
    },
    "metric": {
      "label": {
        "fontSize": "14px",
        "color": "text.secondary",
        "fontWeight": "400",
        "marginBottom": "8px"
      },
      "value": {
        "fontSize": "28px",
        "color": "text.primary",
        "fontWeight": "700",
        "lineHeight": "1.2"
      },
      "change": {
        "fontSize": "14px",
        "fontWeight": "500",
        "padding": "4px 8px",
        "borderRadius": "4px",
        "marginTop": "8px"
      }
    },
    "chart": {
      "background": "transparent",
      "gridColor": "rgba(255, 255, 255, 0.1)",
      "axisColor": "text.muted",
      "dataColors": ["accent.primary", "accent.secondary", "accent.success", "accent.warning"]
    }
  },
  "patterns": {
    "dashboard": {
      "header": {
        "height": "80px",
        "background": "primary.surface",
        "borderBottom": "1px solid rgba(255, 255, 255, 0.1)",
        "padding": "0 24px",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between"
      },
      "metricGrid": {
        "display": "grid",
        "gridTemplateColumns": "repeat(auto-fit, minmax(280px, 1fr))",
        "gap": "24px",
        "marginBottom": "32px"
      },
      "chartSection": {
        "display": "grid",
        "gridTemplateColumns": "2fr 1fr",
        "gap": "24px",
        "marginBottom": "32px"
      }
    },
    "landingPage": {
      "hero": {
        "textAlign": "center",
        "padding": "120px 24px",
        "background": "radial-gradient(ellipse at center, rgba(79, 209, 199, 0.1) 0%, transparent 70%)",
        "title": {
          "fontSize": "64px",
          "fontWeight": "700",
          "lineHeight": "1.1",
          "marginBottom": "24px",
          "background": "linear-gradient(135deg, #ffffff 0%, #9ca3af 100%)",
          "backgroundClip": "text",
          "color": "transparent"
        },
        "subtitle": {
          "fontSize": "20px",
          "color": "text.secondary",
          "maxWidth": "600px",
          "margin": "0 auto 48px"
        }
      },
      "featureGrid": {
        "display": "grid",
        "gridTemplateColumns": "repeat(auto-fit, minmax(350px, 1fr))",
        "gap": "32px",
        "padding": "80px 24px"
      }
    }
  },
  "interactions": {
    "hover": {
      "transition": "all 0.2s cubic-bezier(0.4, 0, 0.2, 1)",
      "scale": "1.02",
      "shadowIntensity": "increased"
    },
    "focus": {
      "outline": "2px solid accent.primary",
      "outlineOffset": "2px"
    },
    "loading": {
      "skeleton": {
        "background": "linear-gradient(90deg, rgba(255,255,255,0.1) 25%, rgba(255,255,255,0.2) 50%, rgba(255,255,255,0.1) 75%)",
        "animation": "shimmer 1.5s infinite"
      }
    }
  },
  "animations": {
    "fadeIn": {
      "keyframes": "0% { opacity: 0; transform: translateY(20px); } 100% { opacity: 1; transform: translateY(0); }",
      "duration": "0.5s",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "slideIn": {
      "keyframes": "0% { transform: translateX(-100%); } 100% { transform: translateX(0); }",
      "duration": "0.3s",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "shimmer": {
      "keyframes": "0% { background-position: -200px 0; } 100% { background-position: calc(200px + 100%) 0; }",
      "duration": "1.5s",
      "easing": "linear"
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": "max-width: 768px",
      "tablet": "max-width: 1024px",
      "desktop": "min-width: 1025px"
    },
    "adaptations": {
      "mobile": {
        "sidebar": {
          "transform": "translateX(-100%)",
          "overlay": true
        },
        "main": {
          "marginLeft": "0",
          "padding": "16px"
        },
        "metricGrid": {
          "gridTemplateColumns": "1fr"
        },
        "chartSection": {
          "gridTemplateColumns": "1fr"
        }
      }
    }
  },
  "designPrinciples": {
    "hierarchy": "Use typography scale and color contrast to establish clear information hierarchy",
    "spacing": "Maintain consistent 8px grid system throughout all components",
    "contrast": "Ensure minimum 4.5:1 contrast ratio for accessibility",
    "motion": "Use subtle animations to enhance user experience without distraction",
    "consistency": "Apply design tokens consistently across all components and patterns",
    "scalability": "Design components to work across different screen sizes and data volumes"
  },
  "usage": {
    "tokens": "Use design tokens for all color, spacing, and typography values",
    "components": "Compose interfaces using predefined component patterns",
    "layouts": "Follow established grid systems and spacing rules",
    "accessibility": "Ensure all interactive elements meet WCAG 2.1 AA standards",
    "performance": "Optimize for fast loading and smooth interactions"
  }
}
